{
	"restartable": "rs",
	"ignore": [".git", "/node_modules/**/node_modules"],
	"verbose": false,
	"watch": "./",
	"env": {
		"NODE_ENV": "development",
		"DEBUG": "app:*, db:*, redis:*, router:*, error:*, auth:*"
	},
	"exec": "node --experimental-json-modules --trace-warnings ./src/server.js",
	"ext": "js,json"
}